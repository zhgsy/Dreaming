<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.moneyactivity.MoneyQActivity">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen10">
        <EditText
            android:id="@+id/m_nums"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50"
            android:hint="请输入转换数量"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/dimen5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/m_pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen50"
                android:hint="请输入安全密码"
                android:background="@null"/>
            <CheckBox
                android:id="@+id/login_exe"
                android:layout_width="@dimen/dimen25"
                android:layout_height="@dimen/dimen13"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen20"
                android:background="@drawable/loginba_image"
                android:button="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/dimen5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hytyu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HYTB余额"/>
            <TextView
                android:id="@+id/m_yue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="转换汇率"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1HYTB:"
                android:visibility="gone"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3.3079"/>
        </LinearLayout>
        <Button
            android:id="@+id/m_butn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:text="转换"
            android:textColor="#FFFFFF"
            android:background="@drawable/login_butn"
            android:layout_marginLeft="@dimen/dimen20"
            android:layout_marginRight="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen30"/>
    </LinearLayout>
</LinearLayout>
