<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99ccff"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen150"
                android:background="@color/colorLogin"
                >
                <RelativeLayout
                    android:id="@+id/mhead_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen30">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/mine_head_img"
                        android:layout_width="@dimen/dimen60"
                        android:layout_height="@dimen/dimen60"
                        app:placeholderImage="@mipmap/heard_image"
                        app:roundAsCircle="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen30"/>
                  <!--  <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/mine_head_img"
                        android:layout_width="@dimen/dimen60"
                        android:layout_height="@dimen/dimen60"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/heard_image"
                        android:layout_marginLeft="@dimen/dimen30"
                      />-->
                  <!--  <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/mine_head_img"
                        android:layout_width="@dimen/dimen60"
                        android:layout_height="@dimen/dimen60"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen10"
                        fresco:placeholderImage="@mipmap/heard_image"
                        fresco:roundAsCircle="true" />-->
                    <TextView
                        android:id="@+id/r_head_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/dimen5"
                        android:layout_toRightOf="@+id/mine_head_img"
                        android:text="13522301073"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        />
                    <ImageView
                        android:id="@+id/mine_head_image"
                        android:layout_width="@dimen/dimen20"
                        android:layout_height="@dimen/dimen20"
                        android:layout_below="@+id/r_head_num"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/dimen10"
                        android:layout_toRightOf="@+id/mine_head_img"
                        android:src="@mipmap/erweima_img"
                        android:textColor="#ffcc00"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/mine_head_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/r_head_num"
                        android:layout_marginLeft="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen10"
                        android:layout_toRightOf="@+id/mine_head_image"
                        android:text="用户账号"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/mine_head_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen10"
                        android:text="扫描二维码"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/head_s_image"
                        android:layout_width="@dimen/dimen30"
                        android:layout_height="@dimen/dimen30"
                        android:src="@mipmap/saoy_imgs"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen10"
                        android:visibility="gone"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen70"
                    android:layout_below="@+id/mhead_image"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/reward_bg"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen150"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen10"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="惠民积分"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/m_jin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen10"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="我的金元"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E8E8E8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen30"
                    android:layout_below="@+id/r_head_num"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:background="@drawable/reward_bag">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/m_fen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#990033"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/m_edu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1000"
                            android:textColor="#990033"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen100"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen10"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="@dimen/dimen5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen15"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/m_tone"
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginLeft="@dimen/dimen27"
                            android:background="@mipmap/sk_style" />
                        <ImageView
                            android:id="@+id/m_ttwo"
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginLeft="@dimen/dimen52"
                            android:background="@mipmap/aqzx" />

                        <ImageView
                            android:id="@+id/m_tshare"
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginLeft="@dimen/dimen50"
                            android:background="@mipmap/share_load" />

                        <ImageView
                            android:id="@+id/m_tfoure"
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginLeft="@dimen/dimen50"
                            android:background="@mipmap/gypt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen35"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen20"
                            android:layout_marginTop="@dimen/dimen30"
                            android:layout_weight="1"
                            android:text="收款方式"
                            android:textSize="@dimen/dimen12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen30"
                            android:layout_weight="1"
                            android:text="安全中心"
                            android:textSize="@dimen/dimen12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen30"
                            android:layout_weight="1"
                            android:text="分享下载"
                            android:textSize="@dimen/dimen12"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen30"
                            android:layout_weight="1"
                            android:text="关于平台"
                            android:textSize="@dimen/dimen12"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen150"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen10"
                    app:cardCornerRadius="@dimen/dimen5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/r_reward"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen35"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dimen10"
                                android:layout_marginTop="@dimen/dimen5"
                                android:layout_weight="1"
                                android:text="我的订单"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dimen10"
                                android:layout_marginTop="@dimen/dimen5"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="全部订单"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/r_cai_left"
                                android:layout_width="@dimen/dimen30"
                                android:layout_height="@dimen/dimen30"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen5"
                                android:src="@mipmap/left_image" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen2"
                            android:layout_marginTop="@dimen/dimen10"
                            android:background="#E8E8E8" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen15"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/m_pay"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen30"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:layout_weight="1"
                                android:src="@mipmap/dfk" />


                            <ImageView
                                android:id="@+id/m_waito"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen30"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:layout_toRightOf="@+id/r_zong"
                                android:layout_weight="1"
                                android:src="@mipmap/dfh" />

                            <ImageView
                                android:id="@+id/m_Waitt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen30"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:layout_toRightOf="@+id/r_zong"
                                android:layout_weight="1"
                                android:src="@mipmap/dsh" />

                            <ImageView
                                android:id="@+id/m_finish"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen30"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:layout_weight="1"
                                android:src="@mipmap/ywc" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen15"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mjf_list"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/r_zong"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="代付款"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen12"/>
                            <TextView
                                android:id="@+id/mjf_xi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/r_xian"
                                android:layout_toRightOf="@+id/r_zong"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="代发货"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen12" />
                            <TextView
                                android:id="@+id/mjd_ti"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/r_tui"
                                android:layout_toRightOf="@+id/r_xian"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="待收货"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen12"/>
                            <TextView
                                android:id="@+id/mjf_shen"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/r_tuan"
                                android:layout_toRightOf="@+id/r_tui"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="已完成"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen12" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen100"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_marginTop="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_marginBottom="@dimen/dimen15"
                    app:cardCornerRadius="@dimen/dimen5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen15"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/m_shop"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen30"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:src="@mipmap/shoping_car" />

                        <ImageView
                            android:id="@+id/m_address"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen30"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_toRightOf="@+id/r_zong"
                            android:layout_weight="1"
                            android:src="@mipmap/address_imgs" />

                        <ImageView
                            android:id="@+id/m_fu"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen30"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_toRightOf="@+id/r_xian"
                            android:layout_weight="1"
                            android:src="@mipmap/servier_img" />

                        <ImageView
                            android:id="@+id/m_set"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen30"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_toRightOf="@+id/r_tui"
                            android:layout_weight="1"
                            android:src="@mipmap/system_img" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen65"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r_zong"
                            android:layout_marginLeft="@dimen/dimen5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="购物车"
                            android:textSize="@dimen/dimen12"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r_zong"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="收货地址"
                            android:textStyle="bold"
                            android:textSize="@dimen/dimen12"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r_zong"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="客服中心"
                            android:textStyle="bold"
                            android:textSize="@dimen/dimen12"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r_zong"
                            android:layout_marginRight="@dimen/dimen5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="系统设置"
                            android:textStyle="bold"
                            android:textSize="@dimen/dimen12" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>