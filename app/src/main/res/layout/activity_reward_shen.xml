<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RewardShenActivity">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示:"
            android:textSize="16sp"
            android:textColor="#990033"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="15sp"
            android:text="你当前符合申请服务条件,请填写以下内容进行申请。"
            android:textColor="#CCCCCC"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写申请资料"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/dimen5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen15"
            android:padding="@dimen/dimen10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前业绩:"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/ss_ye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:minLines="1"
                android:layout_marginLeft="@dimen/dimen10"
                android:hint="请输入您的业绩"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dimen2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen10"
            android:padding="@dimen/dimen10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐编码:"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/ss_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:minLines="1"
                android:layout_marginLeft="@dimen/dimen10"
                android:hint="请输入推荐人的编码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dimen2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen10"
            android:padding="@dimen/dimen10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓          名:"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/ss_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minLines="1"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/dimen10"
                android:hint="请输入您的姓名"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dimen2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen10"
            android:padding="@dimen/dimen10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备          注:"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/ss_mame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:minLines="1"
                android:layout_marginLeft="@dimen/dimen10"
                android:hint="请输入备注"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dimen2"/>
        <Button
            android:id="@+id/ss_butn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_butn"
            android:text="申请"
            android:layout_marginTop="@dimen/dimen50"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>