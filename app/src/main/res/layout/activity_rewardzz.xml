<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.RewardzzActivity">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转赠账号:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/zz_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minLines="1"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:hint="请输入您要转赠的账号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转赠数量:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/zz_num"
            android:layout_width="0dp"
            android:minLines="1"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:hint="请输入您要转赠的数量"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全密码:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/zz_pass"
            android:layout_width="0dp"
            android:minLines="1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入您的安全密码"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备        注:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/zz_name"
            android:layout_width="0dp"
            android:minLines="1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入备注"
            android:textSize="14sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/zz_butn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_height="wrap_content"
        android:background="@drawable/login_butn"
        android:text="确定转赠"
        android:textColor="#ffffff"/>
</LinearLayout>